<script data="{{incidentResultRawString}}">
  let data = document.currentScript.getAttribute('data');
let jsonData = JSON.parse(data);



let today = new Date();
let day = String(today.getDate()).padStart(2, '0');
let month = String(today.getMonth() + 1).padStart(2, '0'); 
let year = today.getFullYear();

let filename = "Incident-Export-" + day + "-" + month + "-" + year + ".xlsx";

        var wb = XLSX.utils.book_new();
        wb.Props = {
                Title: "Hira Export",
                Subject: "Export of Hira Records",
                Author: "KirEx",
                CreatedDate: new Date(year,month,day)
        };
        
        wb.SheetNames.push("Hira Export");
        var ws_data = [['hello' , 1]]; ;
       var ws = XLSX.utils.json_to_sheet(jsonData);
        wb.Sheets["Hira Export"] = ws;
        var wbout = XLSX.write(wb, {bookType:'xlsx',  type: 'binary'});
        function s2ab(s) {
  
                var buf = new ArrayBuffer(s.length);
                var view = new Uint8Array(buf);
                for (var i=0; i<s.length; i++) view[i] = s.charCodeAt(i) & 0xFF;
                return buf;
                
        }
        $("#button-a").click(function(){
                saveAs(new Blob([s2ab(wbout)],{type:"application/octet-stream"}), filename);
        });
  
</script>

